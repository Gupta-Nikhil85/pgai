# ==========================================
# API Gateway Configuration
# ==========================================

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGIN=*

# Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
HELMET_ENABLED=true
TRUST_PROXY=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_TIMEOUT=5000

# Request Configuration
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT_MS=30000

# ==========================================
# Backend Service URLs
# ==========================================

# Required Services
USER_SERVICE_URL=http://localhost:3001

# Optional Services (comment out if not available)
CONNECTION_SERVICE_URL=http://localhost:3002
SCHEMA_SERVICE_URL=http://localhost:3003
VIEW_SERVICE_URL=http://localhost:3004
VERSIONING_SERVICE_URL=http://localhost:3005
DOCUMENTATION_SERVICE_URL=http://localhost:3006

# ==========================================
# Cache Configuration
# ==========================================

# Redis (optional - for distributed caching)
# REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=300

# ==========================================
# API Documentation
# ==========================================

API_TITLE=pgai API Gateway
API_VERSION=0.1.0
API_DESCRIPTION=API Gateway for PostgREST AI Orchestration Platform

# ==========================================
# Service Discovery (optional)
# ==========================================

SERVICE_DISCOVERY_ENABLED=false
# CONSUL_URL=http://localhost:8500
# Development environment for API Gateway
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# JWT Configuration
JWT_SECRET=development-super-secret-jwt-key-for-testing-only-32-chars-minimum
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGIN=*

# Rate Limiting (more permissive in development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Security
HELMET_ENABLED=true
TRUST_PROXY=true

# Logging
LOG_LEVEL=debug
LOG_FORMAT=simple

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_TIMEOUT=5000

# Request Configuration
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT_MS=30000

# Backend Service URLs (adjust ports as needed)
USER_SERVICE_URL=http://localhost:3001
# CONNECTION_SERVICE_URL=http://localhost:3002
# SCHEMA_SERVICE_URL=http://localhost:3003
# VIEW_SERVICE_URL=http://localhost:3004
# VERSIONING_SERVICE_URL=http://localhost:3005
# DOCUMENTATION_SERVICE_URL=http://localhost:3006

# Cache Configuration
CACHE_TTL_SECONDS=300

# API Documentation
API_TITLE=pgai API Gateway (Development)
API_VERSION=0.1.0
API_DESCRIPTION=API Gateway for PostgREST AI Orchestration Platform - Development Environment

# Service Discovery
SERVICE_DISCOVERY_ENABLED=false
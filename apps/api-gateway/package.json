{
  "name": "@pgai/api-gateway",
  "version": "0.1.0",
  "description": "API Gateway for pgai platform - handles routing, authentication, and cross-cutting concerns",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rm -rf dist",
    "prestart": "npm run build",
    "docker:build": "docker build -t pgai-api-gateway .",
    "docker:run": "docker run -p 3000:3000 pgai-api-gateway"
  },
  "dependencies": {
    "@pgai/types": "workspace:*",
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "prom-client": "^15.1.0",
    "dotenv": "^16.3.1",
    "node-cache": "^5.1.2",
    "axios": "^1.6.2",
    "redis": "^4.6.11",
    "express-openapi-validator": "^5.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/jest": "^29.5.8",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16"
  },
  "keywords": [
    "api-gateway",
    "microservices",
    "nodejs",
    "typescript",
    "postgresql",
    "routing",
    "authentication",
    "pgai"
  ],
  "author": "pgai",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/pgai",
    "directory": "apps/api-gateway"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
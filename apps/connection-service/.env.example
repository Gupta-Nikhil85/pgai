# Connection Service Environment Configuration
NODE_ENV=development
PORT=3002
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/pgai_connection
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_ALGORITHM=aes-256-gcm

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here-should-be-at-least-32-characters
JWT_EXPIRES_IN=15m

# Security Configuration
CORS_ENABLED=true
CORS_ORIGIN=*
HELMET_ENABLED=true
TRUST_PROXY=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Connection Management
MAX_CONNECTIONS_PER_USER=10
MAX_CONNECTIONS_PER_TEAM=50
CONNECTION_TEST_TIMEOUT_MS=10000
CONNECTION_POOL_IDLE_TIMEOUT_MS=30000
GLOBAL_POOL_MAX_SIZE=100
GLOBAL_POOL_MIN_SIZE=10

# Health Check Configuration
HEALTH_CHECK_INTERVAL_MS=60000
HEALTH_CHECK_TIMEOUT_MS=5000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9091

# SSH Tunnel Configuration
SSH_TUNNEL_ENABLED=false
SSH_TUNNEL_TIMEOUT_MS=30000

# External Services
USER_SERVICE_URL=http://localhost:3001
SCHEMA_SERVICE_URL=http://localhost:3003

# Webhooks
WEBHOOK_ENABLED=false

# Backup
CONNECTION_BACKUP_ENABLED=true
CONNECTION_BACKUP_INTERVAL_HOURS=24
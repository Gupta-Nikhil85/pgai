# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/pgai_dev"
REDIS_URL="redis://localhost:6379"

# Application Configuration
NODE_ENV="development"
PORT="3000"
LOG_LEVEL="info"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Security
ENCRYPTION_KEY="your-32-character-encryption-key-change-this"
BCRYPT_ROUNDS="12"

# External Services
SMTP_HOST="localhost"
SMTP_PORT="1025"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@pgai.local"

# Monitoring
PROMETHEUS_PORT="9090"
HEALTH_CHECK_INTERVAL="30000"

# Development
ENABLE_CORS="true"
CORS_ORIGIN="http://localhost:3001"

# API Gateway
API_GATEWAY_PORT="3000"
API_GATEWAY_HOST="0.0.0.0"

# Service Ports
USER_SERVICE_PORT="3001"
CONNECTION_SERVICE_PORT="3002"
SCHEMA_SERVICE_PORT="3003"
VIEW_SERVICE_PORT="3004"
VERSIONING_SERVICE_PORT="3005"
DOCUMENTATION_SERVICE_PORT="3006"

# Frontend
NEXT_PUBLIC_API_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="pgai Platform"
NEXT_PUBLIC_APP_VERSION="0.1.0"